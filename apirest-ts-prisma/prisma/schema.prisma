generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String?
  email String @unique
  post Post[]

  @@map("users")
}

model Post {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title String?
  content String
  author   User   @relation(fields: [authorId], references: [id])
  authorId String @db.ObjectId

  @@map("posts")
}